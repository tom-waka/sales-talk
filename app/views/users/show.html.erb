<% provide(:title, @user.name) %>

<h1>ユーザー情報</h1>
<%= @user.name %>, <%= @user.email %>
<% if (current_user?(@user) && !current_user.admin?) || (!current_user?(@user) && current_user.admin?) %>
  <%= link_to "編集", edit_user_path(current_user) %>
  <%= link_to "削除", user_path(@user), method: :delete, data: {confirm: "ユーザー「#{@user.name}」を削除します。よろしいですか？"} %>
<% elsif current_user?(@user) && current_user.admin? %>
  <%= link_to "編集", edit_user_path(current_user) %>
<% end %>
