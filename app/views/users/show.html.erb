<% provide(:title, @user.name) %>

<div class="container">
  <div class="user_info">
    <% if @user.picture? %>
      <%= image_tag @user.picture.url, class: "user-icon" %>
    <% else %>
      <%= image_tag 'default_icon.png', class: "user-icon" %>
    <% end %>
    <div class="user-name"><%= @user.name %></div>
    <%= render 'edit_btn' %>
  </div>
</div>

<h2>投稿一覧</h2>
<% unless @user.articles.present? %>
  <h3>投稿記事はありません</h3>
<% end %>

<%= render partial: 'shared/articles_grid', locals: { object: @user.articles } %>

<div class="container">
  <%= render 'delete_btn' %>
</div>