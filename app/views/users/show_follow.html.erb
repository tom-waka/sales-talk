<% provide(:title, @title) %>

<div class="my_container">

  <div class="link_to_back_follow"><%= link_to "戻る", session[:forwarding_url] || root_url %></div>
  <div class="section-title following-title"><%= "#{@user.name.truncate(10)}｜#{@title}" %></div> 

  <div class="no_following"><%= "該当のユーザーはいません" unless @users.present? %></div>

  <% @users.each do |user| %>
    <div class="user_box">
      <div class="user">
        <% if user.picture? %>
          <%= link_to image_tag(user.picture.url, class: "user-icon"), user %>
        <% else %>
          <%= link_to image_tag('default_icon.png', class: "user-icon"), user %>
        <% end %>
          <%= link_to "#{user.name.truncate(10)}", user, {class: "user-name"} %>
      </div>
    </div> 
    <%= paginate @users, window: 2, left: 1, right: 1 %>
  <% end %>

</div>