<% provide(:title, "ログイン") %>

<h1>ログイン</h1>
<%= form_with scope: :session, url: login_path, local: true do |f| %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %>

  <%= f.label :password, "パスワード" %>
  <%= f.password_field :password %>
 
  <%= f.submit "ログイン" %>

  <p><%= link_to "新規登録はこちら", signup_path %></p>
<% end %>
