<% if notice %>
  <div class="alert alert-info" data-testid="flash_message"><%= notice %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% elsif alert %>
  <div class="alert alert-danger" data-testid="flash_message"><%= alert %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>