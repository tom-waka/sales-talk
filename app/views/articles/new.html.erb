<% provide(:title, "新規投稿") %>

<h2>記事の新規投稿</h2>

<div class="container">
  <%= form_with model: @article, local: true do |f| %>
    <p><%= render partial: 'shared/error_messages', locals: { object: f.object } %></p>

    <p><%= f.label :title, "タイトル（５０文字以内）" %></p>
    <%= f.text_area :title,  rows: 2 , placeholder: "例：絶対に一度は見るべき映画を紹介します。" %>

    <p><%= f.label :content, "好きなモノについて紹介してください！" %></p>
    <%= f.text_area :content,  rows: 25 , placeholder: "好きなモノの概要、おすすめポイント等"%>

    <p><%= f.submit "投稿する", class: "btn" %></p>
  <% end %>
</div>
