<% provide(:title, "") %>

<h2>投稿一覧</h2>

<div class="wrapper grid">
  <% @articles.each do |article| %>
    <div class="article-item">
      <p><%= link_to article.title, article %></p>

      <% if article.user.picture? %>
        <%= image_tag article.user.picture.url, class: "profile-icon" %>
      <% else %>
        <%= image_tag 'default_icon.png', class: "profile-icon" %>
      <% end %>

      <div class="user-name"><%= "営業担当：#{article.user.name}" %></div>
      <p class="option">
        <%= "投稿日：#{article.created_at.to_s(:datetime)}" %>
        <% if logged_in? %>
          <% if current_user.admin? || is_mine?(article)  %>
            <%= link_to "編集", edit_article_path(article) %>
            <%= link_to "削除", article_path(article), method: :delete, data: {confirm: "記事を削除します。よろしいですか？"} %>
          <% end %>
        <% end %>  
      </p>
    </div>
  <% end %>
</div>

