<% provide(:title, "記事詳細") %>

<div class="container">
  <p class="title"><%= safe_join(@article.title.split("\n"),tag(:br)) %></p>
  <p><%= "#{@article.user.name}の投稿" %></p>
  <div class="content">
    <%= safe_join(@article.content.split("\n"),tag(:br)) %>
  </div>
  <div class="option">
    <p><%= "投稿日：#{@article.created_at.to_s(:datetime)}" %></p>
    <% if logged_in? %>
      <% if current_user.admin? || is_mine?(@article)  %>
          <%= link_to "編集", edit_article_path(@article) %>
          <%= link_to "削除", article_path(@article), method: :delete, data: {confirm: "記事を削除します。よろしいですか？"} %>
      <% end %>
    <% end %>
  </div>
</div>
